<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_general"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_event_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date"
        android:id="@+id/set_date_label"
        style="@style/TextAppearance.AppCompat.Notification.Title"
        android:textColor="@color/colorTextGray"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/view_margin_general"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/set_date_date"
        style="@style/TextAppearance.AppCompat.Notification.Title"
        android:textColor="@color/colorTextBlack"
        android:backgroundTint="@color/colorEditTextDarkGray"
        android:focusable="false"
        android:hint="@string/start_date_default" />


</LinearLayout>