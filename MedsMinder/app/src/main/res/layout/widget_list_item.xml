<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widget_list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    
    <ImageView
        android:layout_width="@dimen/widget_image_size"
        android:layout_height="@dimen/widget_image_size"
        tools:src="@drawable/default_card_image"
        android:id="@+id/widget_list_image"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/component_margin_general"
        android:layout_marginEnd="@dimen/component_margin_general"
        android:layout_marginTop="@dimen/view_margin_general"
        android:layout_marginBottom="@dimen/view_margin_general"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_list_pres_name"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Aspirin" />

        <TextView
            android:id="@+id/widget_list_instruction"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_general"
            tools:text="1 tablet 2 times per day" />

        <TextView
            android:id="@+id/widget_list_date_range"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_general"
            tools:text="Apr. 20, 2017 to Apr. 27, 2017" />

    </LinearLayout>

</LinearLayout>